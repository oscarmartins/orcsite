
<form class="form-signin" method="post" action="/users/login">
  <h2 class="form-signin-heading">Account Login</h2>
  <label for="inputEmail" class="sr-only">Username</label>
  <input type="text" class="form-control" name="username" placeholder="Username" >
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" class="form-control" name="password" placeholder="Password">
  <div class="checkbox">
    <label>
            <input type="checkbox" value="remember-me" disabled> Remember me
    </label>
  </div>
  <button class="btn btn-default btn-block" type="submit">Sign in</button>
</form>